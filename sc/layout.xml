<!DOCTYPE StreamControlLayout>
<layout width="400" height="300" tabbed="1">
 <tab name="Match Info">
  <label x="10" y="14" width="46" height="13">Player 1</label>
  <label x="10" y="44" width="46" height="13">Player 2</label>
  <label x="10" y="74" width="46" height="13">Rounds</label>
  <label x="10" y="104" width="46" height="13">animate</label>

  <lineEdit id="pName1" x="60" y="10" width="170" height="20" />
  <lineEdit id="pName2" x="60" y="40" width="171" height="20" />
  <lineEdit id="rounds" x="60" y="70" width="171" height="20" />
  <spinBox id="pScore1" x="250" y="10" width="42" height="30" maximum="99" />
  <spinBox id="pScore2" x="250" y="40" width="42" height="30" maximum="99" />
  <button type="reset" x="160" y="100" width="41" height="23" tooltip="Reset the Scores" id="reset" reset="pScore1,pScore2">Reset score</button>
  <button type="swap" x="230" y="100" width="41" height="23" tooltip="Swap the Scores" id="swap1" swapSet1="pName1,pScore1" swapSet2="pName2,pScore2">Swap</button>
  <comboBox id="animate" x="60" y="100" editable="1" width="100" height="20">
    <comboItem>True</comboItem>
    <comboItem>False</comboItem>
  </comboBox>
 </tab>
</layout>
